# modyn.pc - pkg-config file for Modyn
# This file is generated by cmake from modyn.pc.in

prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/lib
includedir=${prefix}/include
plugindir=@PLUGIN_INSTALL_DIR@

Name: Modyn
Description: 模块化深度学习推理框架，支持多种推理后端
Version: @MODYN_VERSION@
URL: https://github.com/modyn-project/modyn

# 编译器选项
Cflags: -I${includedir}

# 链接器选项
Libs: -L${libdir} -lmodyn_core
Libs.private: -pthread -ldl

# 功能特性标志
enable_rknn=@ENABLE_RKNN@
enable_openvino=@ENABLE_OPENVINO@
enable_tensorrt=@ENABLE_TENSORRT@
enable_api=@ENABLE_API@
enable_opencv=@ENABLE_OPENCV@
enable_plugins=@ENABLE_PLUGINS@

# 插件目录
plugin_directory=${plugindir}

# 版本信息
major_version=@MODYN_MAJOR_VERSION@
minor_version=@MODYN_MINOR_VERSION@
patch_version=@MODYN_PATCH_VERSION@ 